<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<!-- 로그인창 -->
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.LoginContoroller">
	<VBox alignment="CENTER" spacing="10">
		<padding>
			<Insets top="10" right="10" left="10" bottom="10" />
		</padding>
		<VBox alignment="CENTER">
			<ImageView fitHeight="100" fitWidth="100"
				pickOnBounds="true" preserveRatio="true">
				<image>
					<Image url="@../image/login.png" />
				</image>
			</ImageView>
		</VBox>
		<children>
			<HBox alignment="CENTER">
				<Label text="ID" />
				<TextField fx:id="txtId" />
			</HBox>
			<HBox alignment="CENTER">
				<Label text="PW" />
				<PasswordField fx:id="txtPw" />
			</HBox>
			<HBox spacing="10" alignment="CENTER">
				<Button fx:id="btnLogin" text="로 그 인" />
				<Button fx:id="btnExit" text="종    료" />
			</HBox>
		</children>
	</VBox>
</VBox>
